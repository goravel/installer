{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "schedule": [
    "* 0-3 * * 1"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "baseBranches": ["master"],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "ignoreDeps": []
}
